# Firebase (Project Settings → General → Your apps → Web app)
VITE_FIREBASE_API_KEY=AIzaSy...
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abc123def456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Cloud Functions region (us-central1 default, asia-south1 for India)
VITE_FIREBASE_REGION=us-central1

# Razorpay publishable key (safe to expose — starts rzp_test_ or rzp_live_)
VITE_RAZORPAY_KEY_ID=rzp_test_...

# Emulator mode — set true + run: firebase emulators:start
VITE_USE_EMULATOR=false